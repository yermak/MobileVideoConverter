                <include>*.exe</include>
                <include>*.dll</include>
            </includes>
        </fileSet>
-->
        <fileSet>
            <directory>target/lib</directory>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>target</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>audiobookconverter-*.jar</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>